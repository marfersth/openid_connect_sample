<article>
  <h2><%= 'top.title'.t %></h2>
  <p><%= 'top.description'.t %></p>
  <nav class="connect">
    <ul>
      <li><%= render 'connect/facebook/login_button' %></li>
      <li><%= render 'connect/google/login_button' %></li>
      <li><%= render 'connect/fakes/login_button' %></li>
    </ul>
  </nav>
</article>

<h2>Log in</h2>

<%= form_for(:user, url: '/user') do |f| %>
    <%= f.text_field :email %>
    </br>
    <%= f.password_field :password %>
    </br>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </br>
    <%= f.submit 'Sign in' %>
    </br>
    <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>
